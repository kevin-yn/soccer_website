<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>All Teams are here</h1>
            <p>
                <a class="btn btn-primary btn-large" href="/teams/new">Create new team</a>
            </p>
            <p>
                To edit the team, log in with {username: "Calvin", password: "123"} <br>
                Then click More Info <br>
                Each user can only edit the teams created by him
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% teams.forEach(function(team){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <img src="<%= team.profile_pic %>" class="team-logo" alt="Responsive image">
                    <div>
                        <h4><%= team.name %></h4>
                    </div>
                    <p>
                        <a href="/teams/<%= team._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include("../partials/footer") %>