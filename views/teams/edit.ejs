<%- include("../partials/header") %>

<div class="container">
    <h1 style="text-align: center">Edit Team Info</h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/teams/<%- team._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="team[name]" value="<%- team.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="team[profile_pic]" value="<%- team.profile_pic %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Edit</button>
                </div>
            </form>
            <a href="/teams">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>